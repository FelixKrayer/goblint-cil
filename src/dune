(include_subdirs unqualified)

(library
  (public_name cil)
  (wrapped false)
  (libraries zarith)
)

(rule
  (targets machdep.ml)
  (deps ../Makefile ../configure.ac machdep-ml.c)
  (action (chdir .. (progn (run make machdep) (run cp _build/machdep.ml src))))
)

